@model List<Daily_report>
@{
    ViewData["Title"] = "Daily_Report_data";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>DataTable Example</title>
    <script src="~/js/datatable.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

</head>
<body>

<div class="container mt-3">
    <h2 style="padding:1%;">Daily Production Report</h2>
    <section>
        <form asp-action="ViewGrid2" method="post">
        <div class="row">
            <div class="col-lg-12">
                <div style="height:250px">
                    <div style="height:300px;overflow-x:scroll;">

                  <table id="tblDailyReport" class="table table-bordered table-striped" >
                    <thead>
                        <tr>
                            <th>CurrentDate</th>
                            <th>FG Name</th>
                            <th>PCB_COUNT</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.CurrentDate</td>
                                    <td>@item.FG_Name</td>
                                    <td>@item.PCB_COUNT</td>
                                </tr>
                                }

                            }
                            else
                            {
                                <tr>
                                <td colspan="5" style="text-align:center;">Nodata</td>
                            </tr>
                            }
                      
                    </tbody>
                </table>
                </div>
                </div>
            </div>
        </div>
        <div class="row" style="padding-top:10%;">
            <div class="col-lg-12" style="text-align:right;">
                <input type="submit" class="btn btn-primary" id="btnViewGrid" name="View Grid2" value="View Grid"/>
            </div>
        </div>
        </form>
    </section>

</div>
</body>
</html>

<script>
    $(document).ready(function () {
        debugger;
        // Initialize DataTable
        $('#tblDailyReport').DataTable({
            // Optional configurations
            paging: true,    // Enable pagination
            searching: true, // Enable search
            ordering: true,  // Enable column ordering
            order: [[1, 'asc']] // Default sorting (1st column, ascending)
        });
    });
</script>