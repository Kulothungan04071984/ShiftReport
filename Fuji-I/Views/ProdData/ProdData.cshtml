@model List<Prod_data>
@{
    ViewData["Title"] = "ProductionData";
}


<div class="container mt-3">
    <h2 style="padding:1%;">Hourly Production data</h2>
    <section>
        <form asp-action="ViewGrid" method="post">
        <div class="row">
            <div class="col-lg-12">
                <div style="height:250px">
                    <div style="height:420px;overflow-x:scroll;">
                        
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>DATE</th>
                            <th>HOUR_INTERVAL</th>
                            <th>WORKORDER</th>
                            <th>FG NAME</th>
                            <th>PCB COUNT </th>
                        </tr>
                    </thead>
                    <tbody>
                      
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                <tr>
@*                                     <td>@item.CurrentDate</td>
                                    <td>@item.Hour</td>
                                    <td>@item.FG_Name</td>
                                    <td>@item.Target</td>
                                    <td>@item.Actual</td> *@

                                    <td>@item.CurrentDate</td>
                                    <td>@item.Hour</td>
                                    <td>@item.WorkOrder</td>
                                    <td>@item.FG_Name</td>
                                    <td>@item.PCB_COUNT</td>
                                </tr>
                                }

                            }
                            else
                            {
                                <tr>
                                <td colspan="5" style="text-align:center;">Nodata</td>
                            </tr>
                            }
                      
                    </tbody>
                </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="padding-top:15%;">
            <div class="col-lg-12" style="text-align:right;">
                <input type="submit" class="btn btn-primary" id="btnViewGrid" name="View Grid" value="View Grid"/>
            </div>
        </div>
        </form>
    </section>

</div>

