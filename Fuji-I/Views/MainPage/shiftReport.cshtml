                        'rgba(0,255,1)',
                        'rgba(128,128,1)',
                        'rgba(128,0,1)',
                        'rgba(255,0,1)',
                        'rgba(255,255,1)',
                        'rgba(128,0,129)',
                        'rgba(192,192,193)'

                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                legend: {
                    position: "bottom",
                    labels: {
                        boxWidth: 11,
                        fontColor: "#757681",
                        fontSize: 11
                    }
                }
            }

        });
