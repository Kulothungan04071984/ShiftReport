                    'rgba(192,192,192)'


                ],
                borderColor: [
                    'rgba(4, 202, 210)',
                    'rgba(0,255,1)',
                    'rgba(102, 176, 96)',
                    'rgba(222, 186, 208)',
                    'rgba(128,0,1)',
                    'rgba(255,0,1)',
                    'rgba(255,255,1)',
                    'rgba(128,0,129)',
                    'rgba(192,192,193)'

                ],
                borderWidth: 1
            }]
        };

        // Chart options
        var optionsGraph = {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        };

        // Get the context of the canvas element
        var ctxgraph = document.getElementById("myChart").getContext('2d');

        // Create the chart
        var myChart = new Chart(ctxgraph, {
            type: 'bar',
            data: dataChart,
            options: optionsGraph
        });



        var ctxpiechart = document.getElementById('pieChart').getContext('2d');
        var chartdata = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.lstLineUtilization));
        var chrtlabels = chartdata.map(function (item) { return item.Label; });
        var chrtvalues = chartdata.map(function (item) { return item.Value; });

        var piechart = new Chart(ctxpiechart, {
            type: 'pie',
            data: {
                labels: chrtlabels,
                datasets: [{
                    data: chrtvalues,
                    backgroundColor: [
                        'rgba(0,0,255)',
                        'rgba(0,128,0)',
                        'rgba(0,255,0)',
                        'rgba(128,128,0)',
                        'rgba(128,0,0)',
                        'rgba(255,0,0)',
                        'rgba(255,255,0)',
                        'rgba(128,0,128)',
                        'rgba(192,192,192)'

